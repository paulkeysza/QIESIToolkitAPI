{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Commit & Push",
            "type": "shell",
            "command": "git add . && git commit -m \"Auto-commit on ${input:timestamp}\" && git push",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "timestamp",
            "type": "command",
            "command": "extension.commandvariable.dateTime",
            "args": {
                "format": "yyyy-MM-dd HH:mm:ss"
            }
        }
    ]
}